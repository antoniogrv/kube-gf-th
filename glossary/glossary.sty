\newglossaryentry{ml}{name={ML (Machine Learning)}, text={ml}, description={Campo dell'informatica che si occupa dello sviluppo di algoritmi e modelli che consentono ai computer di apprendere da dati e migliorare le proprie prestazioni nel tempo. ML abbraccia diverse metodologie, tra cui apprendimento supervisionato, non supervisionato e rinforzato, per trarre insight, fare previsioni o automatizzare compiti complessi. La sua applicazione spazia dalla classificazione di dati all'analisi predittiva e all'ottimizzazione di processi.}}
\newglossaryentry{mlops}{name={MLOps (Machine Learning Operations)}, text={mlops}, description={Pratiche e metodologie che integrano lo sviluppo, il deployment e la gestione di modelli di machine learning, migliorando la collaborazione tra sviluppatori e team operativi.}}
\newglossaryentry{mlsecops}{name={MLSecOps (Machine Learning Security Operations)}, text={mlsecops}, description={Approccio che integra sicurezza e operazioni nel ciclo di vita dei modelli di machine learning. Garantisce la protezione dei modelli e dei dati sensibili.}}
\newglossaryentry{mlre}{name={MLRE (Machine Learning Reliability Engineering)}, text={mlre}, description={Approccio alla gestione e alla manutenzione di sistemi di machine learning. MLRE combina principi di SRE con pratiche specifiche per modelli ML, garantendo la coerenza, la scalabilità e l'affidabilità nell'implementazione di soluzioni di intelligenza artificiale.}}


