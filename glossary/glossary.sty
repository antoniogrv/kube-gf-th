\newglossaryentry{mlsecops}{name={MLSecOps}, text={mlsecops}, description={(Machine Learning Security Operations) Approccio che integra sicurezza e operazioni nel ciclo di vita dei modelli di machine learning. Garantisce la protezione dei modelli e dei dati sensibili.}}
\newglossaryentry{mlre}{name={MLRE}, text={mlre}, description={(Machine Learning Reliability Engineering) Approccio alla gestione e alla manutenzione di sistemi di machine learning. MLRE combina principi di SRE con pratiche specifiche per modelli ML, garantendo la coerenza, la scalabilità e l'affidabilità nell'implementazione di soluzioni di intelligenza artificiale.}}
\newglossaryentry{mlflow}{name={MLFlow}, text={mlflow}, description={Tecnologia che semplifica il ciclo di vita dei modelli di machine learning. La piattaforma open-source offre tracciamento, packaging e deployment, migliorando la collaborazione e la riproducibilità delle sperimentazioni.}}
\newglossaryentry{microservizi}{name={Microservizi}, text={microservizi}, description={Architettura software basata sulla suddivisione di un'applicazione in servizi modulari indipendenti, facilitando lo sviluppo, la manutenzione e la scalabilità delle applicazioni.}}


